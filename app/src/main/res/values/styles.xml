<resources>
    <style name="Theme.HiddenSettings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="containerBackgroundColor">@color/white</item>
        <item name="containerBorderColor">@color/border_light</item>
        <!-- অন্যান্য রঙ -->
    </style>
	
    <style name="Theme.App.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="backgroundColor">@color/white</item>
        <item name="textColor">@color/text_light</item>
        <item name="borderColor">@color/border_light</item>
        <item name="colorControlHighlight">#22000000</item>
    </style>

    <style name="Theme.App.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="backgroundColor">@color/black</item>
        <item name="textColor">@color/text_dark</item>
        <item name="borderColor">@color/border_dark</item>
        <item name="colorControlHighlight">#33FFFFFF</item>
    </style>
</resources>
	
